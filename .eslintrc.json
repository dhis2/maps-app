{
    "extends": ["eslint:recommended", "plugin:react/recommended", "prettier", "plugin:cypress/recommended"],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "classes": true,
            "modules": true,
            "jsx": true
        }
    },
    "plugins": ["prettier", "cypress"],
    "rules": {
        "prettier/prettier": "error"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "globals": {
        "DHIS_CONFIG": true,
        "L": true,
        "ee": true
    }
}
